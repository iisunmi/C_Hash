            Random random = new Random();
            int[] comNum = new int[3];
            int index = 0;
            while(index<3)
            {
                comNum[index] = random.Next(0, 10);

                bool hasDuplicate = false;
                for(int j=0;j<index;j++)
                {
                    if(comNum[index]==comNum[j])
                    {
                        hasDuplicate = true;
                        break;
                    }
                }

                if(!hasDuplicate)
                {
                    index++;
                }
            }


